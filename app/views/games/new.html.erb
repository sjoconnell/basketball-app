<% if @game.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being created</h2>
 
    <ul>
    <% @game.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_tag '/games', method: :post do %>
<h1 class="create-game">Create Game</h1>
<br>
<div class ="row">
  <div class="col-md-6">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title"><%= label_tag :title %></h3>
      </div>
        <div class="panel-body">
          <%= text_field_tag :title, nil, class: "fulllength" %>
        </div>
    </div>

    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title"><%= label_tag :address %></h3>
      </div>
        <div class="panel-body">
          <%= text_field_tag :address, nil, class: "fulllength" %>
        </div>
    </div>  

    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Start Time</h3>
      </div>
        <div class="panel-body">
          <%= datetime_local_field :game, :start_time %>
      </div>
    </div>  
  </div>
  <div class="col-md-6">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title"><%= label_tag :players_allowed %></h3>
      </div>
        <div class="panel-body">
          <%= text_field_tag :players_allowed %>
      </div>
    </div>
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title"><%= label_tag :description %></h3>
      </div>
        <div class="panel-body">
          <%= text_field_tag :description, nil, class: "fulllength" %>
      </div>
    </div>

    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">End Time</h3>
      </div>
        <div class="panel-body">
          <%= datetime_local_field :game, :end_time %>
      </div>
    </div>
  </div>


    <div class="submit-button">
      <%= submit_tag "Create game" %>
    </div>
</div>

<% end %>