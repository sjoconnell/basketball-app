
  <h2>Title: <%= @game.title %></h2>
  <h2>Address: <%= @game.address %></h2>
  <h2>Start Time: <%= @game.start_time.strftime("%b %e%l:%M%p")  %></h2>
  <h2>End Time: <%= @game.end_time.strftime("%b %e%l:%M%p")  %></h2>
  <h2>Players Joined: <%= @game.players_joined %></h2>
  <h2>Description: <%= @game.description %></h2>
  <div>
    <iframe
    width="600"
    height="450"
    frameborder="0" style="border:0"
    src="https://www.google.com/maps/embed/v1/place?key=AIzaSyAUx2rd-iiFODbyxZumrl1VU9FRHtU1lW0
      &q=<%= @game.address %>" allowfullscreen>
    </iframe>
  </div>

<% if user_signed_in? && GamedUser.where("game_id = ? AND user_id = ?",@game.id, current_user.id).first == nil && @game.status != "full" %>
<%= form_tag '/gamed_users', method: :post do %>
  <div>
    <%= hidden_field_tag :game_id, @game.id %>
  </div>
<%= submit_tag "Join Game" %>
<% end %>
<% end %>

<% if user_signed_in? && GamedUser.where("game_id = ? AND user_id = ?",@game.id, current_user.id).first != nil %>
<%= link_to "Leave Game", "/gamed_users/#{GamedUser.where("game_id = ? AND user_id = ?",@game.id, current_user.id).first.id}", method: :delete %>
<% end %>

<% if user_signed_in? && current_user.id == @game.user_id %>
<%= link_to "Edit Game", "/games/#{@game.id}/edit" %>
<br>
<%= link_to "Delete Game", "/games/#{@game.id}", method: :delete %>
<% end %>

<h1>Players:</h1>
<% @joinedusers.each do |joineduser| %>
  <% Profile.where(user_id: joineduser.user_id).each do |player| %>
    <h2>Name: <%= link_to player.first_name, "/profiles/#{player.id}" %></h2>
  <% end %>
<% end %>


